<%= form_with(model: @supplier) do |s| %>
  <div class = 'form_fields'>
    <%= s.label :corporate_name %>
    <%= s.text_field :corporate_name %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :trade_name %>
    <%= s.text_field :trade_name%>
  </div>

  <div class = 'form_fields'>
    <%= s.label :registration_number %>
    <%= s.text_field :registration_number %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :full_address %>
    <%= s.text_field :full_address %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :city %>
    <%= s.text_field :city %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :state %>
    <%= s.text_field :state %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :email %>
    <%= s.text_field :email %>
  </div>

  <div class = 'form_fields'>
    <%= s.label :phone %>
    <%= s.text_field :phone %>
  </div>

  <div id='submit'>
    <%= s.submit 'Enviar' %>
  </div>

<% end %>